<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio520135831.NewPage1"
             Title="NewPage1">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="La Langosta Ahumada" FontSize="30" TextColor="BlueViolet" HorizontalOptions="Center"/>
            <Label Text="Indica la cantidad de personas" Margin="10" FontSize="15" HorizontalOptions="Center"/>
            <Entry x:Name="personas" Keyboard="Numeric" Placeholder="Ingresa la cantidad de personas" WidthRequest="300" HorizontalOptions="Center"/>
            <Button Text="Calcular" WidthRequest="400" HorizontalOptions="Center" BackgroundColor="Cyan" TextColor="Black" Clicked="Button_Clicked"/>

            <Frame x:Name="mostrar" IsVisible="False" WidthRequest="600" HeightRequest="100" BackgroundColor="Pink">
                <Label Text="Perfecto" HorizontalOptions="Center" FontSize="20"></Label>
                <Label x:Name="indicar" Text="" HorizontalOptions="Center" FontSize="20" TextColor="Black"></Label>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>